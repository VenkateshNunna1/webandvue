package strings1;

public class split2 {

	public static void main(String[] args) {
		String s="java is a opp language";
		opp(s);
		

	}
	static void opp(String s) {
		String[] arr=s.split(" ");
		for(String arr1:arr) {
			System.out.print(arr1+" ");
		}
		}
		
	static String reverse(String s) {
		char[] arr = s.toCharArray();
		int i=0;
		int j=arr.length-1;
		while(i<j) {
			char temp =arr[i];
			arr[i]=arr[j];
			arr[j]=temp;
			i++;
			j--;
		}
		return new String(arr);
	}

}
